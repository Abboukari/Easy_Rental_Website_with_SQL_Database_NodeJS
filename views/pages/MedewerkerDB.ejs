<main>
  <section class="med-titel">
    <h1>MEDEWERKERS</h1>
    <p>Hier komt een veld tot betrekking met de database Medewerkers, bijvoorbeel de naam het adres en de geboorte datum</p>
  </section>

  <section class="med-tafel">
    <% if (data.length) { %>}
    <table>
      <thead>
        <tr>
          <th scope="row">Gegevens</th>
          <td class="med-data" colspan="2">per werknemer</td>
        </tr>
      </thead>

      <tbody>
        <% for ( var i = 0; i< data.length; i++) { %>}
        <tr>
          <th scope="row">Voornaam</th>
          <td class="med-data" colspan="2" <%="data[i].voornaam%"></td>
        </tr>
        <tr>
          <th scope="row">Achternaam</th>
          <td class="med-data" colspan="2"><%= data[i].achternaam%></td>
        </tr>
        <tr>
          <th scope="row">Geboortedatum</th>
          <td class="med-data" colspan="2"><%= data[i].geboortedatum%></td>
        </tr>
        <tr>
          <th scope="row">Functie</th>
          <td class="med-data"><%= data[i].Rol_naam%></td>
        </tr>
        <tr>
          <th scope="row">Login naam</th>
          <td class="med-data" colspan="2"><%= data[i].login_naam%></td>
        </tr>
        <tr>
          <th scope="row">Paswoord</th>
          <td class="med-data" colspan="2"><%= data[i].paswoord%></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
  </section>
</main>
